{
    "$schema": "../../../../schemas/form-view-definition.schema.json",
    "name": "translations-form",
    "labelKey": "translation",
    "definition": {
        "entity": "MetaTranslation",
        "type": "form",
        "containers": [
            {
                "cols": 12,
                "showTitle": false,
                "fields": [
                    {
                        "name": "key",
                        "labelKey": "key",
                        "cols": 6,
                        "type": "string",
                        "validationRules": [
                            {
                                "rule": "required",
                                "labelKey": "field_required"
                            }
                        ],
                        "translatable": false
                    },
                    {
                        "name": "languageCode",
                        "labelKey": "language-code"
                    },
                    {
                        "name": "value",
                        "labelKey": "translation"
                    },
                    {
                        "name": "group",
                        "labelKey": "group"
                    },
                    {
                        "name": "isTemplate",
                        "labelKey": "template",
                        "type": "switch"
                    }
                ]
            }
        ]
    },
    "actions": {
        "save": {
            "enableToolbarButton": true,
            "enableMenuLink": false
        },
        "delete": {
            "enableToolbarButton": false,
            "enableMenuLink": false
        },
        "archive": {
            "enableToolbarButton": false,
            "enableMenuLink": false
        },
        "refresh": {
            "enableToolbarButton": false,
            "enableMenuLink": false
        },
        "customActions": [
            {
                "type": "text",
                "name": "ciccio",
                "labelKey": "aasd"
            }
        ]
    },
    "events": {
        "onLoadData": {
            "waitUntil": [
                {
                    "source": "customAction",
                    "name": "ciccio",
                    "operator": "is",
                    "expression": "NotNull"
                }
            ]
        }
    }
}
